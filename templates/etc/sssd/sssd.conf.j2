{{ ansible_managed|comment }}
[sssd]
services = nss, pam
config_file_version = 2
domains = {{ sssd_kerberos_realm|upper }}

[domain/{{ sssd_kerberos_realm|upper }}]
id_provider = ad
access_provider = ad
ad_server = {{ hostvars[groups[sssd_domain_controllers_group][0]]['ansible_host'] }}
override_homedir = /home/%d/%u